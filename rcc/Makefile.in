
CFLAGS=-g3 -Wall -Wextra -pedantic

.PHONY: clean all
all: rcc

clean:
	rm -f *.o rcc parser.output lex.yy.c parser.tab.h parser.tab.c

lex.yy.c: lexer.l
	flex --full -o $@ $^

parser.tab.c: parser.y
	bison -d -v -Wcounterexamples -o $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $^

rcc: parser.tab.o lex.yy.o modq.o emitter.o symtab.o node.o codegen.o main.o
	$(CC) $(CFLAGS) -o $@ $^
